@model DT191G_Projekt.Models.Product

@{
    ViewData["Title"] = "Lägg till produkt";
}

<h1>@ViewData["Title"]</h1>

<div class="floatright">
    <a asp-action="Index">Tillbaka till alla produkter</a>
</div>

<form asp-action="Create" enctype="multipart/form-data" class="createform">
    <div asp-validation-summary="ModelOnly" class="error"></div>

    <label asp-for="ProductCategoryId"></label>
    <select asp-for="ProductCategoryId" asp-items="ViewBag.ProductCategoryId"></select>
    <a asp-controller="ProductCategories" asp-action="Create" class="floatright btndark">Lägg till ny kategori</a>
    <br>

    <label asp-for="ProductName"></label>
    <input asp-for="ProductName" />
    <span asp-validation-for="ProductName" class="error"></span>

    <label asp-for="ProductDescription"></label>
    <input asp-for="ProductDescription" />
    <span asp-validation-for="ProductDescription" class="error"></span>

    <label asp-for="ProductPrice"></label>
    <input asp-for="ProductPrice" />
    <span asp-validation-for="ProductPrice" class="error"></span>

    <label asp-for="ProductImageFile"></label>
    <input asp-for="ProductImageFile" />
    <span asp-validation-for="ProductImageFile" class="error"></span>

    <input type="submit" value="Lägg till" class="btnaccent" />
</form>

@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}