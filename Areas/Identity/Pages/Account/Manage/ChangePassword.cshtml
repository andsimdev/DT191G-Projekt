@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Ändra lösenord";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}
<br/>
<h3>@ViewData["Title"]</h3>
<br/>
<partial name="_StatusMessage" for="StatusMessage" />
        <form id="change-password-form" method="post">
            <div asp-validation-summary="ModelOnly" class="error"></div>

                <input asp-for="Input.OldPassword" autocomplete="current-password" aria-required="true" />
                <label asp-for="Input.OldPassword">Nuvarande lösenord</label>
                <span asp-validation-for="Input.OldPassword" class="error"></span>
                <br/>
                <input asp-for="Input.NewPassword" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.NewPassword">Nytt lösenord</label>
                <span asp-validation-for="Input.NewPassword" class="error"></span>
                <br/>
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.ConfirmPassword" class="form-label">Bekräfta nytt lösenord</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>

            <br /><br/>
            <button type="submit" class="btnaccent">Uppdatera lösenord</button>
        </form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
